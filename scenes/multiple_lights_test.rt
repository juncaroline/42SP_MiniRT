# Simple scene with multiple light sources for testing
# Ambient light (low intensity to see the effect of multiple lights)
A 0.1 255,255,255

# Camera positioned to see all objects
C 0,0,8 0,0,-1 60

# Multiple light sources
L -5,5,5 0.6 255,0,0      # Red light from left-top
L 5,5,5 0.6 0,255,0       # Green light from right-top
L 0,-5,5 0.4 0,0,255      # Blue light from bottom-front

# Objects to illuminate
sp 0,0,0 2 255,255,255    # White sphere at center
pl 0,-3,0 0,1,0 100,100,100   # Gray plane below
cy -3,0,0 0,1,0 1 3 200,100,50  # Orange cylinder on left
cy 3,0,0 0,1,0 1 3 50,100,200   # Blue cylinder on right
